<Window x:Class="WpfDicomViewerDemo.SelectPresentationStateFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select Presentation State File"
    WindowStartupLocation="CenterOwner"
    Height="100" Width="585" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Name="filenamesComboBox" Height="23" Margin="3" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button IsDefault="True" Height="23" Width="75" Margin="3,0" Click="okButton_Click">OK</Button>
            <Button IsCancel="True" Height="23" Width="75" Margin="3,0">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
